# Normalize all text files to use Unix-style LF endings
* text=auto eol=lf

# Specific overrides for file types
*.sql     text eol=lf
*.ts      text eol=lf
*.tsx     text eol=lf
*.js      text eol=lf
*.jsx     text eol=lf
*.json    text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.md      text eol=lf
*.html    text eol=lf
*.css     text eol=lf
*.sh      text eol=lf
*.env     text eol=lf

# Binary files (Git should not alter these)
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.pdf     binary
